generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Content {
  id      String  @id @default(uuid())
  img     String
  title   String
  text    String  @db.VarChar(900)
  tools   String
  link    String
  front   String
}

model About {
  id        String  @id @default(uuid())
  title     String
  AboutMe   String @db.VarChar(900)
}

model Port {
  id      String @id @default(uuid())
  title   String
  text    String @db.VarChar(900)
  image   String
}

model Skills {
  id      String @id @default(uuid())
  title   String
  logo    String
}

model Contact {
  id            Int  @id @default(autoincrement())
  firstName     String
  lastName      String
  email         String @unique
  message       String @db.VarChar(2000)
  createdAt     DateTime @default(now())
}